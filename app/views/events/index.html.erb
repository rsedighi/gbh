<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Details</th>
      <th>When</th>
      <th>Where</th>
     <!--  <th>Uid</th>
      <th>User response</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.details %></td>
        <td><%= event.when %></td>
        <td><%= event.where %></td>
<!--         <td><%= event.uid %></td>
        <td><%= event.user_response %></td> -->
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

